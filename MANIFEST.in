# MANIFEST.in
# Specifies additional files to include in the distribution package

# Documentation
include README.md
include README.fa.md
include README.de.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Locale files (translations)
recursive-include distfit_pro/locales *.json

# Package metadata
include setup.py
include pyproject.toml
include requirements.txt

# Exclude development and temporary files
exclude .gitignore
exclude *.pyc
exclude *.pyo
exclude *~
exclude .DS_Store

# Exclude test files from distribution
exclude test_*.py
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude examples *

# Exclude temporary/backup files
exclude *_temp.py
exclude *_FIXED.py
exclude *.bak
exclude *.swp

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune __pycache__
